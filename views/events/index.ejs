    <thead>
      <tr>
        <th>Occasion</th>
        <th>Date</th>
        <th>Time</th>
        <th>Venue</th>
        <th>Actions</th> 
      </tr>
    </thead>
    <tbody>
      <% events.past.forEach(function(event) { %> 
        <tr>
          <td><%= event.occasion %></td>
          <td><%= event.date %></td>
          <td><%= event.time %></td>
          <td><%= event.venue %></td>
          <td class="actions">
            <a href="/events/<%= event._id %>">DETAILS</a> 
            
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</section>

