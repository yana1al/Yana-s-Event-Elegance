
  <% include('../partials/header') %>

  <section id="new-event">
    <h2>Add New Event</h2>
    <form id="new-form" action="/events" method="POST">
      <label for="occasion">Occasion:</label>
      <input type="text" id="occasion" name="occasion" required>
      
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required>
      
      <label for="time">Time:</label>
      <input type="time" id="time" name="time" required>
      
      <label for="venue">Venue:</label>
      <input type="text" id="venue" name="venue" required>
      
      <label for="invite">Invite:</label>
      <input type="text" id="invite" name="invite">
      
      <label for="guestCount">Guest Count:</label>
      <input type="number" id="guestCount" name="guestCount" required>
      
      <label for="details">Details:</label>
      <textarea id="details" name="details"></textarea>
      
      <label for="contactHostEmail">Contact Host (Email):</label>
      <input type="email" id="contactHostEmail" name="contactHostEmail" required>
      
      <label for="contactHostPhone">Contact Host (Phone):</label>
      <input type="tel" id="contactHostPhone" name="contactHostPhone" required>
      
      <label for="rsvp">RSVP:</label>
      <select id="rsvp" name="rsvp">
        <option value="Going">Going</option>
        <option value="Not Going">Not Going</option>
        <option value="Maybe">Maybe</option>
      </select>
      
      <label for="happeningNow">Happening Now:</label>
      <input type="checkbox" id="happeningNow" name="happeningNow" checked>
      
      <button type="submit">Add Event</button>
    </form>
  </section>

  <% include('../partials/footer') %>

