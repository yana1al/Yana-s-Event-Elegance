          <td class="actions">
            <a href="/events/<%= event._id %>">DETAILS</a> 
            <a href="/events/<%= event._id %>/edit">EDIT</a> 
            <form action="/events/<%= event._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">DELETE</button> 
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <h2>Past Events</h2>
